{% macro navLink(params) %}
<div class="hidden lg:block">
  <ul class="flex items-center">
    <li class="group pl-6">
      <a
        href="#"
        class="pt-0.5 font-header font-semibold uppercase text-white"
        >{{params.title}}</a
      >

      <span
        class="block h-0.5 w-full bg-transparent group-hover:bg-yellow"
      ></span>
    </li>
  </ul>
</div>
{% endmacro %}